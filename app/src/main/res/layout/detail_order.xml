<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:padding="10dp"
    android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView android:id="@+id/teks_order"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="12dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Id Order : "
            />


        <TextView android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="12dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:text="id"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView android:id="@+id/teks_name"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="12dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Nama Pembeli : "
            />


        <TextView android:id="@+id/nama_order"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="12dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:text="@string/app_name"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView android:id="@+id/teks_date"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="12dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Tanggal Beli: "
            />


        <TextView android:id="@+id/date_order"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="12dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:text="24624"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView android:id="@+id/teks_Status"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="12dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Status Order : "
            />


        <TextView android:id="@+id/status_order"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="12dip"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:text="keterangan"/>


    </LinearLayout>










    </LinearLayout>
