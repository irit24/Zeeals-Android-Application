<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_6"
        android:paddingTop="@dimen/dp_6">

        <TextView
            android:id="@+id/list_order"
            fontPath="fonts/SourceSansPro-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/margin_every_post"
            android:text="Nama Order"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/no_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_order"
            android:textSize="@dimen/dp_15"



            android:layout_marginLeft="@dimen/dp_15"
            android:text="No Order" />

        <TextView
            android:id="@+id/date_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_10"
            android:inputType="date"
            android:text="Yesterday"
            android:textSize="@dimen/dp_10"
            android:textStyle="normal" />
        <!--<TableRow-->
            <!--android:id="@+id/tableRow4"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="left"-->
            <!--android:layout_below="@id/no_order"-->
            <!--android:layout_marginLeft="@dimen/dp_15"-->
            <!--android:background="@drawable/notif_status"-->
            <!--&gt;-->
            <TextView
                android:id="@+id/status_order"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@id/no_order"
        android:layout_marginLeft="@dimen/dp_15"

                android:text="Veriveid"
                android:textSize="@dimen/dp_10"
                android:textColor="@color/white"
                android:paddingRight="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#cccccc" />
</LinearLayout>